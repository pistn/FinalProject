@model IEnumerable<FinalProject.Models.Project>


@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
@if (User.Identity.IsAuthenticated)
{
    <p>
    <a asp-controller="Projects"
   asp-action="Create">Create New</a>

    </p>}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HeroUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deadline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Goal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HeroUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Deadline)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Goal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Person.Email)
                </td>
                @if (User.Identity.IsAuthenticated)
                {
                <td>
                    <!-- <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
    <a asp-action="Details" asp-route-id="@item.Id">Details</a> -->
                    @if (User.Identity.Name == item.Person.Email)
                    {
                        <a asp-controller="Projects" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a asp-controller="Projects" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        //<a asp-controller="Projects" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        @Html.ActionLink("Packages", "Index", "PackagesPrjct", new { id = item.Id }, null)}
                    else
                    {@Html.ActionLink("Packages", "Index", "Packages", new { id = item.Id }, null)}
                    <!--<a asp-action="Delete" asp-route-id="@item.Id">Packages</a>-->
                </td>}
                    
            </tr>
        }
    </tbody>
</table>
